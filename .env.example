# Markdown Todo Application Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# Authentication Configuration
# =============================================================================

# NextAuth.js secret key (required for production)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here

# Application URL (required for production)
# Default: http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# Database Configuration (Supabase)
# =============================================================================

# Supabase Project URL
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (safe for client-side use)
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (server-side only, keep secret!)
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Use Supabase for user authentication (true = Supabase, false = local JSON files)
# Set to 'true' for production (Vercel), 'false' for local development
# Default: false (local JSON files)
USE_SUPABASE=false

# =============================================================================
# Data Storage Configuration (Legacy - kept for migration)
# =============================================================================

# Directory where markdown data files are stored
# Default: ./data (relative to project root)
DATA_DIR=./data

# File encoding for reading/writing markdown files
# Default: utf-8
# Valid options: utf-8, utf8, ascii, utf16le, latin1
FILE_ENCODING=utf-8

# Number of spaces per indentation level for nested tasks
# Default: 4
# Valid range: 1-8
INDENT_SPACES=4

# Maximum character length for task content
# Default: 500
# Valid range: 10-10000
MAX_CONTENT_LENGTH=500

# Maximum character length for project IDs
# Default: 100
# Valid range: 1-500
MAX_PROJECT_ID_LENGTH=100

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level for the application
# Default: debug (development), info (production), error (test)
# Valid options: fatal, error, warn, info, debug, trace
LOG_LEVEL=info

# Log format
# Default: pretty (development), json (production)
# Valid options: json, pretty
LOG_FORMAT=json

# =============================================================================
# Sentry Error Monitoring (Optional)
# =============================================================================

# Sentry DSN (Data Source Name)
# Get this from your Sentry project settings
# Leave empty to disable Sentry
SENTRY_DSN=

# Sentry environment name
# Default: development
SENTRY_ENVIRONMENT=development

# Sentry release version
# Default: auto-detected from package.json
# SENTRY_RELEASE=

# Enable Sentry performance monitoring
# Default: false
# Set to true to enable transaction tracing
SENTRY_TRACES_SAMPLE_RATE=0.1

# Enable Sentry session replay (frontend only)
# Default: 0
SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0

# Enable Sentry error replay (frontend only)
# Default: 0
SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=0
